<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">
	<name>WeSeK Read More</name>
	<author>Thomas Kutter</author>
	<creationDate>Dezember 2013</creationDate>
	<copyright>Copyright (C)2013 WeSeK</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>info@wesek.de</authorEmail>
	<authorUrl>http://www.wesek.de</authorUrl>
	<version>1.0</version>
	<description>Read More Module by WeSeK</description>
	<languages>
		<language tag="de-DE">language/de-DE.mod_WeSeKReadMore.ini</language>
		<language tag="en-GB">language/en-GB.mod_WeSeKReadMore.ini</language>
	</languages>
	<files>
		<filename module="mod_WeSeKReadMore">mod_WeSeKReadMore.php</filename>
		<filename module="mod_WeSeKReadMore">index.html</filename>
		<filename module="mod_WeSeKReadMore">mod_WeSeKReadMore.xml</filename>
		<folder module="mod_WeSeKReadMore">tmpl</folder>
	</files>
	
	<config>
	<fields name="params">
		<fieldset name="Settings">
				<field name="title" type="text" default="Your Title" label="TITLE" description="YOUR_TITLE" />
				<field name="description" type="textarea" default="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor." label="DESCRIPTION" description="DESCRIPTION" rows="4" cols="30" />
				<field name="textcolor" type="color" default="#FFFFFF" label="TEXTCOLOR" description="YOUR_TEXTCOLOR" />		
				<field name="Directory" type="media" default = "images/" label="IMAGE_DIRECTORY"  description = "IMAGE_DIRECTORY" size="30" />		
				<field name="pxHeight" type="text" default = "200" label="HEIGHT"  description = "HEIGHT_IN_PIXELS" size="10" />
				<field name="pxWidth" type="text" default = "200" label="WIDTH"  description = "WIDTH_IN_PIXELS" size="10" />
				<field name="link" type="text" default = "http://www.wesek.de" label="LINK"  description = "LINK_DESCRIPTION" size="30" />
				<field name="bgcolor" type="color" default="#006699" label="BACKGROUND" description="BACKGROUND_COLOR" />
				<field name="readMore" type="text" default="Read More" label="READMORE" description="READMORE" />
		</fieldset>
	</fields>
	</config>	
</extension>
